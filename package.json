    "@nestjs/platform-fastify": "^10.3.1",
    "@nestjs/platform-socket.io": "^10.3.1",
    "@nestjs/platform-ws": "^10.3.1",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.2.0",
    "@nestjs/websockets": "^10.3.1",
