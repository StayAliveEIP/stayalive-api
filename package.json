    "nodemailer-mailjet-transport": "^1.0.4",
    "passport-jwt": "^4.0.1",
    "passport-magic-login": "^1.2.2",
    "react": "^18.2.0",
    "react-email": "^1.10.1",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.1.14",
    "resend": "^2.1.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.4",
    "ws": "^8.16.0"
