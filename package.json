  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "/src/app*",
      "/src/dto.dto.ts",
      "/src/main.ts",
      "/src/database/*.*",
      "/src/decorator/*.*",
      "/src/guards/*.*",
      "/src/websocket/*.*"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
